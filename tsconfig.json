{
  "compilerOptions": {
    "composite": true,
    "module": "commonjs",
    "declaration": true,
    "removeComments": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "strict": false,
    "noUnusedLocals": false,
    "lib": ["ES7"],
    "paths": {
      "@ogma/*": ["./*/src"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
